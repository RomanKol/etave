{
  "manifest_version": 2,

  "name": "etave",
  "description": "event tracking and visualization extension",
  "version": "0.0.2",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Etave session"
  },

  "icons": {
    "128": "icon.png"
  },

  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "tabs",
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}