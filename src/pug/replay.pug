section#etave-player

  section.timeline
    input(type='text' name='name' value=0 readonly)
    //- progress(value=0)
    input(type='range' min=0 step=1)
    input(type='text' name='name' readonly)

  section.controls
    section
      input#heatmap.hidden(type='checkbox' name='heatmap' checked)
      label.btn.btn-icon(for='heatmap')
        include ../../extension/heatmap.svg

      input#path.hidden(type='checkbox' name='path' checked)
      label.btn.btn-icon(for='path')
        include ../../extension/path.svg

      input#scrollmap.hidden(type='checkbox' name='scrollmap' checked)
      label.btn.btn-icon(for='scrollmap')
        include ../../extension/scrollmap.svg

    section
      button#backward.btn.btn-icon(title='+2 seconds')
        include ../../extension/backward.svg

      button#replay.btn.btn-icon(title='restart')
        include ../../extension/replay.svg

      button#play.btn.btn-icon(title='play/pause') â–º

      button#forward.btn.btn-icon(title='-2 seconds')
        include ../../extension/forward.svg

    section
      button.player-speed.btn.btn-circle(disabled data-speed=1) 1x
      button.player-speed.btn.btn-circle(data-speed=2) 2x
      button.player-speed.btn.btn-circle(data-speed=4) 4x

    section.fade
      label(title="Fade events out")
        input#fade(type='checkbox' name='fade')
        | Fade

      input#fadeValue(type='number' name='fadeValue' min=0 value=10 disabled)

  section.options

      label
        input.option(type='checkbox' name='mousedown' checked)
        | Mousedowns

      label
        input.option(type='checkbox' name='mouseup' checked)
        | Mouseups

      label
        input.option(type='checkbox' name='click' checked)
        | Clicks

      label
        input.option(type='checkbox' name='mousemove' checked)
        | Mousemoves

      label
        input.option(type='checkbox' name='scroll' checked)
        | Scroll

      label
        input.option(type='checkbox' name='keydown' checked)
        | Keys

      label
        input.option(type='checkbox' name='change' checked)
        | Change