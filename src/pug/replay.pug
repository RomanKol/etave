button#replay.btn.btn-icon
  include ../../extension/path.svg

section#options
  fieldset
    input(type='checkbox' name='heatmap')#heatmap.hidden
    label(for='heatmap').btn
      include ../../extension/heatmap.svg
      | Heatmap

    input(type='checkbox' name='path')#path.hidden
    label(for='path').btn
      include ../../extension/path.svg
      | Path

  fieldset
    label
      input(type='checkbox' name='clicks')
      | Clicks

    br

    label
      input(type='checkbox' name='moves')
      | Moves

section#player
  section.timeline
    input(type='text' name='name' readonly).text-right
    progress(value=0)
    input(type='text' name='name' readonly)

  section.controls
    button#backward.btn.btn-icon
      include ../../extension/backward.svg

    button#play.btn.btn-icon
      include ../../extension/play.svg

    button#forward.btn.btn-icon
      include ../../extension/forward.svg

    button(data-speed=1).player-speed.btn.btn-circle 1x
    button(data-speed=2).player-speed.btn.btn-circle 2x
    button(data-speed=4).player-speed.btn.btn-circle 4x